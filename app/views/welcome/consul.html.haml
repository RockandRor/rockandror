= content_for :body_class, "body-consul-services"
= content_for :meta_title, t(".meta.title")
= content_for :meta_description, t(".meta.description")
= content_for :meta_keywords, t(".meta.keywords")

.page.consul-services
  .cont-introduction.medium-12.small-12.large-6
    %h1
      = t(".title_html")
    .logo
      = inline_svg_tag "svg/consul-logo.svg"
    %div
      = t(".subtitle_html")

  .row.team
    .content.small-12
      %h2.text-center
        = t(".team.title")

    .small-10.small-offset-1.column.medium-5.medium-offset-1.large-4.large-offset-2
      %p.description
        = t(".team.description")
    .small-10.small-offset-1.column.medium-5.medium-offset-0.large-4.end
      %ul.members
        %li
          = link_to t(".team.javi.name"), "https://github.com/javierm/", target: :blank
        %li
          = link_to t(".team.senen.name"), "https://github.com/Senen/", target: :blank
        %li
          = link_to t(".team.sebas.name"), "https://github.com/taitus/", target: :blank
      %p
        = t(".team.certified_html")

  .row.services
    .content.small-10.small-offset-1.text-center
      %h2
        = t(".services.title")
      %p
        = t(".services.description")

  .row.services.no-padding-top{"data-equalizer" => ""}
    %section.small-10.small-offset-1.column.medium-5.medium-offset-1.large-4.large-offset-2
      %ul.pricing-table.installation{"data-equalizer-watch" => ""}
        %li.title
          %h2
            = t(".installation.title")
        %li.price
          = t(".installation.price")
        %li.description
          = t(".installation.latest")
        %li.description
          = t(".installation.design")
        %li.description
          = t(".installation.census")
        %li.description
          = t(".installation.updates")
        %li.description
          = t(".installation.monitoring")
        %li.cta-button
          = link_to t(".installation.submit"), url_for(anchor: "contact-anchor"), class: "button floor success"
    %section.small-10.small-offset-1.column.medium-5.medium-offset-0.large-4.end
      %ul.pricing-table.development{"data-equalizer-watch" => ""}
        %li.title
          %h2
            = t(".development.title")
        %li.price
          = t(".development.price")
        %li.description
          = t(".development.new")
        %li.description
          = t(".development.mods")
        %li.description
          = t(".development.technical_support")
        %li.description
          = t(".development.consultancy")
        %li.description
          = t(".development.audit")
        %li.cta-button
          = link_to t(".development.submit"), url_for(anchor: "contact-anchor"), class: "button floor success"

  .row.services.no-padding-top
    .content.small-10.small-offset-1.text-center
      %p
        = t(".custom")

  .row.info
    .content.small-12
      %h2.text-center
        = t(".info.title")
    .small-10.small-offset-1.column.medium-5.medium-offset-1.large-4.large-offset-2
      %p
        = t(".description")
        %br
        = link_to 'www.consulproject.org', 'http://consulproject.org/es/',  target: :blank

    .small-10.small-offset-1.column.medium-5.medium-offset-0.large-4.end
      %p
        = t(".experience.part1")

        <br><br>

        = t(".experience.part2_html")

  %a#contact-anchor.anchor
  .row.services#contact
    .content.small-10.small-offset-1
      %h2.text-center= t(".contact.title")

    .small-12.large-6.large-offset-3.column.end
      #contact-notice-placeholder
    .small-10.small-offset-1.large-6.large-offset-3.column.end
      = render "shared/contact/form", contact: @contact, remote: true
