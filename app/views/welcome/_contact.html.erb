<section class="contact" id="scroll_to_contact">
  <div class="container">
    <div class="col-md-6 col-xs-12">
      <h3 class="hidden-md hidden-lg">Contactos</h3>
      <%= bootstrap_form_for @contact do |f| %>
        <%= f.text_field :name, placeholder: 'Nombre o Empresa', label: "Nombre" %>
        <%= f.text_field :email, placeholder: 'Email', label: "Email" %>
        <%= f.text_area :message, placeholder: 'Mensaje', label: "Mensaje" %>
        <%= f.submit "Enviar", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-6 col-xs-12 text-center">
      <h3 class="hidden-xs">Contact</h3><br>
      <%= mail_to "info@rockandror.com"  %>
      <br>
      <span>
      Tel: +34 605 526 618<br>
      Palma de Mallorca, España<br>
      <br>
      <%= link_to "", "https://www.facebook.com/RockRor-916000665159036/timeline/?ref=tn_tnmn", class: "fa fa-facebook fa-2x", target: :blank %>
      <%= link_to "", "https://twitter.com/rocknroragile", class: "fa fa-twitter fa-2x", target: :blank %>
      </span>
      <div class="circle">
        <div class="logo"></div>
        <strong>Rock&Ror</strong><br>
        <span>desarrollo web agil a medida</span>
        <span>©Copyright 2015</span>
      </div>
    </div>
  </div>
  <a href="#scroll_to_intro" class="btn-up" id="btn-up"><i class="fa fa-arrow-up"></i></a>
</section>