<% title t'pages.contact.meta.title' %>
<% meta_tag :description, t('pages.contact.meta.description') %>
<% meta_tag :keywords, t('pages.contact.meta.keywords') %>

<section class="page contact">
  <div class="row header-bg">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <%= link_to t('common.btn_back'), url_for(:back), class: 'btn-back' %>
      <h1>
        <%= t'pages.contact.title_html' %>
      </h1>
      <%= render 'shared/logo_rails' %>
    </div>
  </div>

  <div class="col-lg-8 col-lg-offset-2">
    <div class="col-xs-12 col-md-6">
      <br />
      <br />
      <p>
        <%= t'pages.contact.introduction_html' %>
      </p>
    </div>
    <div class="col-xs-12 col-md-6">
      <br />
      <%= bootstrap_form_for @contact, url: contact_index_path do |f| %>
        <%= f.text_field :name,
                          label: t("pages.contact.form.label_name"),
                          placeholder: t("pages.contact.form.name")
                          %>
        <%= f.text_field :email,
                          label: t("pages.contact.form.label_email"),
                          placeholder: t("pages.contact.form.email")
                          %>

        <%= f.select :budget, [[t("pages.contact.form.budget_i_do_not")], ["5.000"], ["10.000"], ["15.000"], ["25.000"], ["35.000"], ["50.000"], ["75.000"], [" + 75.000"]],
                    { label: t("pages.contact.form.label_budget"), include_blank: t("pages.contact.form.include_blank_budget") },
                    { class: "selectpicker" }
                     %>

        <%= f.text_area :message,
                        placeholder: t("pages.contact.form.message"),
                        label: t("pages.contact.form.label_message")
                        %>

        <%= f.submit t("pages.contact.form.btn_send"),
                      class: "btn btn-block btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</section>
<br />
