<% title t'pages.consul_budget.meta.title' %>
<% meta_tag :description, t('pages.consul_budget.meta.description') %>
<% meta_tag :keywords, t('pages.consul_budget.meta.keywords') %>

<section class="page budget-consul">
  <div class="row header-bg">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <h1>
        <%= t'pages.consul_budget.h1_title_html' %>
      </h1>
      <lead><%= t'pages.consul_budget.h1_subtitle_html' %></lead>
      <%= render 'shared/logo_rails' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <%= inline_svg "svg/consul-logo.svg", class: 'consul-logo' %>
      <hr />
      <h2><%= t'pages.consul_budget.h2_1_title' %></h2>
      <p>
        <%= t'pages.consul_budget.description_1_html' %>
      </p>
      <br />

      <%= link_to 'Calcule su presupuesto',
                '#scroll_to_calculate_budget',
                class:'btn btn-lg btn-primary',
                id: 'btn-budget' %>

    </div>
  </div>

  <div class="row services">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <h2><%= t'pages.consul_budget.h2_2_title' %></h2>
      <p>
        <%= t'pages.consul_budget.description_2_html' %>
      </p>
      <div class='timeline col-xs-12'>
        <ul>
            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-1.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 3:</h3>
                  <p>Preparación del entorno de servidores necesarios para instalar la aplicación</p>
                </div>
              </div>
            </li>
            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-2.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 2:</h3>
                  <p>Configuración de herramientas de monitorización de errores, integración continua e instalación de la aplicación</p>
                </div>
              </div>
            </li>

            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-3.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 3:</h3>
                  <p>Adaptación de Consul a su Ayuntamiento (adaptación de la imágen corporativa)</p>
                </div>
              </div>
            </li>

            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-4.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 4:</h3>
                  <p>Integración con el Censo para poder aprovechar al máximo la aplicación.</p>
                </div>
              </div>
            </li>

            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-5.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 5:</h3>
                  <p>Necesidad de personalizar procesos por parte del Ayuntamiento (Análisis, implementación y documentación)</p>
                </div>
              </div>
            </li>

            <li>
              <div class='content'>
                <div class="icon">
                  <%= inline_svg "svg/budget-consul-icon-6.svg" %>
                </div>
                <div class='content-text'>
                  <h3>Módulo 6:</h3>
                  <p>Mantenimiento y actualización del repositorio con las últimas modificaciones en Consul</p>
                </div>
              </div>
            </li>

            <li id='scroll_to_calculate_budget'>
              <div class='content-text'></div>
              <!-- <div class="icon">
                <%= inline_svg "svg/budget-consul-icon-7.svg" %>
              </div> -->
            </li>
          </ul>
      </div>
    </div>

    <div class="container col-xs-12">
      <div class="col-md-10 col-md-offset-1 budget-container text-center" id="calculate-budget">
        <h2>
          CALCULE SU PRESUPUESTO
        </h2>
        <p>
          Vaya seleccionando los módulos que <br /> necesita <strong>su Ayuntamiento</strong> y calcule el precio total.
        </p>
        <%= render "wizard" %>
      </div>
    </div>
  </div>
</section>
