<% title t'pages.agile_developer.meta.title' %>
<% meta_tag :description, t('pages.agile_developer.meta.description') %>
<% meta_tag :keywords, t('pages.agile_developer.meta.keywords') %>

<section class="page agile-development">
  <div class="row header-bg">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <%= link_to t('common.btn_back'), url_for(:back), class: 'btn-back' %>
      <h1>
        <%= t'home_page.agile_developer.title_html' %>
      </h1>
      <%= render 'shared/logo_rails' %>
    </div>
  </div>

  <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
    <h2><%= t'pages.agile_developer.h2_2_title' %></h2>
    <p>
      <%= t'pages.agile_developer.description_html' %>
    </p>

    <div class="row">
      <%= image_tag "svg/home-agile-develompent.svg", class: 'hidden-xs col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 img-responsive' %>
    </div>

    <ul class="no-padding-left">
      <li class="analysis">
        <strong><%= t'pages.agile_developer.analysis_title' %></strong>
        <p>
          <%= t'pages.agile_developer.analysis_description_html' %>
        </p>
      </li>
      <li class="design">
        <strong><%= t'pages.agile_developer.design_title' %></strong>
        <p>
          <%= t'pages.agile_developer.design_description_html' %>
        </p>
      </li>
      <li class="implementation">
        <strong><%= t'pages.agile_developer.implementation_title' %></strong>
        <p>
          <%= t'pages.agile_developer.implementation_description_html' %>
        </p>
      </li>
      <li class="test">
        <strong><%= t'pages.agile_developer.test_title' %></strong>
        <p>
          <%= t'pages.agile_developer.test_description_html' %>
        </p>
      </li>
      <li class="acceptance">
        <strong><%= t'pages.agile_developer.acceptance_title' %></strong>
        <p>
          <%= t'pages.agile_developer.acceptance_description_html' %>
        </p>
      </li>
      <li class="launching">
        <strong><%= t'pages.agile_developer.launching_title' %></strong>
        <p>
          <%= t'pages.agile_developer.launching_description_html' %>
        </p>
      </li>
    </ul>
  </div>

  <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
    <hr />
    <h2>
      <%= t'pages.agile_developer.reasons_title' %>
    </h2>
    <p>
      <%= t'pages.agile_developer.reasons_description_html' %>
    </p>
    <br />
  </div>

</section>

<%= render 'shared/contact_now' %>
