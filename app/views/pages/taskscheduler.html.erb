<% title t'pages.works.taskscheduler.meta.title' %>
<% meta_tag :description, t('pages.works.taskscheduler.meta.description') %>
<% meta_tag :keywords, t('pages.works.taskscheduler.meta.keywords') %>

<section class="page taskscheduler">
  <div class="row header-bg">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <%= link_to t('common.btn_back'), url_for(:back), class: 'btn-back' %>
      <h1>
        <%= t'pages.works.taskscheduler.h1_title_html' %>
      </h1>
      <lead><%= t'pages.works.taskscheduler.lead' %></lead>
      <%= render 'shared/logo_rails' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <div class="row">
        <div class="col-md-3">
          <%= image_tag "taskscheduler/logo-taskscheduler.png", class: 'logo' %>
        </div>
        <div class="col-md-9">
          <p>
            <%= t'pages.works.taskscheduler.general_description_html' %>
          </p>
          <%= link_to 'Visita Taskscheduler', '#', class:'btn btn-lg btn-primary', target: 'blank' %>
        </div>
      </div>
      <hr />
      <br />
      <h2><%= t'pages.works.taskscheduler.h2_1_html' %></h2>
      <p><%= t'pages.works.taskscheduler.description_1_html' %></p>
      <br />
      <%= image_tag "taskscheduler/cover.jpg", class: 'img-responsive' %>
      <br />
      <h2><%= t'pages.works.taskscheduler.h2_2_html' %></h2>
      <p><%= t'pages.works.taskscheduler.description_2_html' %></p>
      <hr />
      <h2><%= t'pages.works.taskscheduler.h2_3_html' %></h2>
      <ul class="no-padding-left">
        <%= t'pages.works.taskscheduler.list_3_html' %>
      </ul>
    </div>
    <div class="col-xs-12 accounting bg-grey-light">
      <div class="col-lg-10 col-lg-offset-1">
        <div class="col-xs-12 col-sm-4 text-center">
          <span class="glyphicon glyphicon-grain gi-2x"></span>
          <br />
          <br />
          <span class="text-uppercase">
            <%= t'common.accounting.delivery_time' %>
          </span>
          <br />
          <br />
          <strong>3 Meses</strong>
          <hr class="visible-xs">
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
          <span class="glyphicon glyphicon glyphicon-time gi-2x"></span>
          <br />
          <br />
          <span class="text-uppercase">
            <%= t'common.accounting.hours_worked' %>
          </span>
          <br />
          <br />
          <strong>500</strong>
          <hr class="visible-xs">
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
          <span class="glyphicon glyphicon glyphicon-euro gi-2x"></span>
          <br />
          <br />
          <span class="text-uppercase">
            <%= t'common.accounting.budget' %>
          </span>
          <br />
          <br />
          <strong>
            <%= t'common.accounting.medium' %>
          </strong>
        </div>
        <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
          <hr />
          <p class="text-center">
            <small>
              <%= t'common.accounting.guarantee_html' %>
            </small>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row responsive">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <h2><%= t'pages.works.taskscheduler.h2_4_html' %></h2>
      <p><%= t'pages.works.taskscheduler.description_4_html' %></p>
        <br />
        <div id="galleryFrontEndResponsive" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#galleryFrontEndResponsive" data-slide-to="0" class="active"></li>
            <li data-target="#galleryFrontEndResponsive" data-slide-to="1"></li>
            <li data-target="#galleryFrontEndResponsive" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag "taskscheduler/image-smartphone.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "taskscheduler/image-smartphone-1.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "taskscheduler/image-smartphone-2.jpg" %>
            </div>
          </div>
          <a class="left carousel-control" href="#galleryFrontEndResponsive" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#galleryFrontEndResponsive" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <br />
    </div>
  </div>

  <div class="row back-end">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <h2><%= t'pages.works.taskscheduler.h2_5_html' %></h2>
      <p><%= t'pages.works.taskscheduler.description_5_html' %></p>
      <%= image_tag "taskscheduler/backend.jpg", class: 'img-responisve' %>
      <br />
    </div>
  </div>

  <div class="row tecnology">
    <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
      <h2><%= t'pages.works.taskscheduler.h2_tecnology_html' %></h2>
      <p><%= t'pages.works.taskscheduler.tecnology_html' %></p>
    </div>
  </div>
  <div class="row customer">
    <div class="container">
      <br />
      <h2 class="text-center">
        <%= t'pages.works.taskscheduler.h2_customer_html' %>
      </h2>
      <%= image_tag('testimonials/vanessa-moreno.jpg', class: 'img-responsive img-circle') %>
      <p class="text-center">
        <small>CEO: Carlos Jesús Martín González</small>
      </p>
      <div class="col-md-8 col-md-offset-2">
        <p>
          <%= t'pages.works.taskscheduler.customer_description_html' %>
        </p>
        <br />
      </div>
    </div>
  </div>
</section>

<%= render 'shared/contact_now' %>
